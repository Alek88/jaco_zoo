<odoo>
  <data>
     <record id="isp_1c_uuid_res_partner_view" model="ir.ui.view">
        <field name="name">isp.1c.uuid.inherit.res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="1C" name='1c'>
                    <group>
                        <field name="uuid_1c"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>