<odoo>
  <data>
     <record id="isp_1c_uuid_sale_order_view" model="ir.ui.view">
        <field name="name">isp.1c.uuid.inherit.sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page string="1C" name='1c'>
                    <group>
                        <field name="uuid_1c"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>