<odoo>
  <data>
     <record id="isp_1c_uuid_product_product_view" model="ir.ui.view">
        <field name="name">isp.1c.uuid.inherit.product.product.view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']" position="after">
                <page string="1C" name='1c'>
                    <group name="1C UUID">
                        <field name="uuid_1c"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>