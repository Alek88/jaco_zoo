    <record id="save_conf_master_view_xml_done" model="ir.ui.view">
        <field name="name">o1c.save.conf.form</field>
        <field name="model">o1c.save.conf</field>
        <field name="arch" type="xml">
            <form string="Configuration download">
                <div class="oe_title">
                    <field name="file_name" invisible="1" />
                    <label class="mb-3" for="xml_file" string="The XML file has been successfully generated."/>
                    <h2><field name="xml_file" filename="file_name"/></h2>
                </div>
                <label for="description"/>
                <field name="description" nolabel="1"/>
                <footer>
                    <button special="cancel" string="Close" type="object" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
